{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "importOrder": [
    "./wdyr",
    "^react$",
    "^(?!.*app/)\\w",
    "^(@sovryn)(/.*|$)",
    "./config/chains",
    "^app/",
    "^[./|~/]"
  ],
  "importOrderSeparation": true,
  "overrides": [
    {
      "files": ["apps/frontend/src/locales/**/*.json"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
